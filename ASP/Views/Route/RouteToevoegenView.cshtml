@{
    ViewData["Title"] = "Route Toevoegen";
}
@model List<ASP.Models.WerknemerViewModel>

<div class="form-group mb-3" style="width: 273px;margin-top: 48px;margin-bottom: 0px;margin-left: 54px;">
    <p style="margin-bottom: 3px;">Route Nummer</p>
    <div class="input-group"><input class="form-control InputBorder" placeholder="Route Nummer" style="/*border: 0;*//*border-width: 0 0 1px 0;*//*border-color: black;*//*border-radius: 0;*/" /></div>
</div>
<div style="margin-left: 54px;margin-top: 24px;">
    <p style="margin-bottom: 5px;">Chauffeur</p>
       <select id="drop-aanpassen" style="margin-right: 0px;">
        <optgroup label="Werknemers" selected=>
            @foreach (WerknemerViewModel werknemer in Model)
            {
                <option value="@werknemer.WerknemerID">@werknemer.Naam</option>
            }
        </optgroup>
    </select>

</div>
<div style="margin-left: 54px;margin-top: 18px;">
    <p style="margin-bottom: 5px;">Bijrijder</p>        
