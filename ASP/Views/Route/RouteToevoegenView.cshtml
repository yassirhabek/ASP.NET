                <option value="@werknemer.WerknemerID">@werknemer.Naam</option>
            }
        </optgroup>
    </select>
</div>
<div class="form-group mb-3" style="width: 273px;margin-top: 17px;margin-bottom: 0px;margin-left: 54px;">
    <p style="margin-bottom: 3px;">Starttijd</p>
    <div class="input-group"><input class="form-control InputBorder" placeholder="Starttijd" style="/*border: 0;*//*border-width: 0 0 1px 0;*//*border-color: black;*//*border-radius: 0;*/" /></div>
</div>
<div class="form-group mb-3" style="width: 273px;margin-top: 17px;margin-bottom: 0px;margin-left: 54px;">
    <p style="margin-bottom: 3px;">Eindtijd</p>
    <div class="input-group"><input class="form-control InputBorder" placeholder="Eindtijd" style="/*border: 0;*//*border-width: 0 0 1px 0;*//*border-color: black;*//*border-radius: 0;*/" /></div>
</div>
